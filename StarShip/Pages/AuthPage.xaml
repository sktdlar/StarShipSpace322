<Page x:Class="StarShip.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StarShip.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="10">
                Введите номер паспорта:
            </TextBlock>
            <TextBox Margin="10" Name="PassportTB" />


            <Button Margin="10" Content="Войти" Name="EnterBtn" Click="EnterBtn_Click"/>
            <Button Margin="10 0 10 10" Content="Регистрация" Name="RegBtn" Click="RegBtn_Click"/>
            <Button Margin="10 0 10 0" Content="Гость" Name="GuestBtn" Click="GuestBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
