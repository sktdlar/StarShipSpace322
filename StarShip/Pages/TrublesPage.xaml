<Page x:Class="StarShip.Pages.TrublesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StarShip.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrublesPage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <DataGrid HorizontalAlignment="Center" x:Name="TroubleDG" AutoGenerateColumns="False">
                    <DataGrid.Columns >
                        <DataGridTextColumn Binding="{Binding Trouble.Name}" Header="Название проблемы"></DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Planet.Name}" Header="Название планеты"></DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
