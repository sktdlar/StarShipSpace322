<Page x:Class="StarShip.Pages.FIndBestRoutePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StarShip.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FIndBestRoutePage">

    <Grid>
        <Label FontSize="24" HorizontalAlignment="Center">Самый быстрый маршрут</Label>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Планета отправления</TextBlock>
                <ComboBox Margin="10" Width="200"></ComboBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Планета Прибытия</TextBlock>
                <ComboBox Margin="10" Width="200"></ComboBox>
            </StackPanel>
            <Button x:Name="GetRoutes" Margin="10" Click="GetRoutes_Click">Сформировать маршрут</Button>
        </StackPanel>
    </Grid>
</Page>
